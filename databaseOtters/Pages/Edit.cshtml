@page
@model databaseOtters.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Otter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Otter.TattooID" class="control-label"></label>
                <input asp-for="Otter.TattooID" class="form-control" readonly/>
                <span asp-validation-for="Otter.TattooID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Otter.Name" class="control-label"></label>
                <input asp-for="Otter.Name" class="form-control" />
                <span asp-validation-for="Otter.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Otter.Color" class="control-label"></label>
                <input asp-for="Otter.Color" class="form-control" />
                <span asp-validation-for="Otter.Color" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Otter.TattooID" />
            <div class="form-group">
                <label asp-for="Otter.MotherId" class="control-label"></label>
                <select asp-for="Otter.MotherId" class="form-control" asp-items="ViewBag.MotherId"></select>
                <span asp-validation-for="Otter.MotherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Otter.PlaceName" class="control-label"></label>
                <select asp-for="Otter.PlaceName" class="form-control" asp-items="ViewBag.PlaceName"></select>
                <span asp-validation-for="Otter.PlaceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Otter.FounderId" class="control-label"></label>
                <select asp-for="Otter.FounderId" class="form-control" asp-items="ViewBag.FounderId"></select>
                <span asp-validation-for="Otter.FounderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

